{
	"PutUrl" : "http://localhost:9200/_template/analyzer",
	"template" : "*",
	"settings" : {
		"analysis" : {
			"filter" : {
				"autocomplete_filter" : {
					"type" : "edge_ngram",
					"min_gram" : 1,
					"max_gram" : 20
				}
			},
			"analyzer" : {
				"lowercase_keyword" : {
					"type" : "custom",
					"tokenizer" : "keyword",
					"filter" : "lowercase"
				},
				"autocomplete" : {
					"type" : "custom",
					"tokenizer" : "standard",
					"filter" : [
						"lowercase",
						"autocomplete_filter"
					]
				}
			}
		}
	}
}
